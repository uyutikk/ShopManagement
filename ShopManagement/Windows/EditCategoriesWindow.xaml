<Window x:Class="ShopManagement.EditCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать категорию" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Название:"/>
        <TextBox Grid.Row="0" x:Name="CategoryNameTextBox" Width="300" HorizontalAlignment="Left" Margin="80,0,0,10"/>

        <Label Grid.Row="1" Content="Описание:"/>
        <TextBox Grid.Row="1" x:Name="DescriptionTextBox" Width="300" HorizontalAlignment="Left" Margin="80,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>