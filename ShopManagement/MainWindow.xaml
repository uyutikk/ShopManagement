<Window x:Class="ShopManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopManagement"
        mc:Ignorable="d"
        Title="Управление таблицами" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Окна">
                <MenuItem Header="Категории" Click="CategoriesMenu_Click"/>
                <MenuItem Header="Поставщики" Click="SuppliersMenu_Click"/>
                <MenuItem Header="Товары" Click="ProductsMenu_Click"/>
                <MenuItem Header="Клиенты" Click="CustomersMenu_Click"/>
                <MenuItem Header="Заказы" Click="OrdersMenu_Click"/>
            </MenuItem>
        </Menu>

        <TextBlock Grid.Row="1" Text="Выберите окно из меню" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
    </Grid>
</Window>
